{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES6",
    "outDir": "./assets/js/dist",
    "rootDir": "./assets/js/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "assets/js/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "assets/js/dist"
  ]
}
